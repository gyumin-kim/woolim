<% if @article.errors.any? %>
    <h2>다음의 오류로 인해 글이 게시되지 않았습니다.</h2>
    <ul>
        <%= @article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

<h1>문장을 기록하세요</h1>
<%= form_for @article do |f| %>
    <p>
        <%= f.label :title %>
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :description %>
        <%= f.text_area :description %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>

<%= link_to '목록', articles_path %>